        <div class="row">
            <div class="col-md-4">
                <div class="user-list">
                    {{#user}}
                    <div class="user-list-item"> <a href="?id={{userid}}" class="d-block">{{firstname}} {{surname}}</a>
                    </div>
                    {{/user}}

                </div>
            </div>
            {{#userdata}}
            <div class="col-md-8">
                <div class="main-layout">
                    <div class="profile-section">
                        <div class="profile-header mx-auto">
                            <div class="d-flex justify-content-center mb-3">
                                <img src="{{photourl}}" alt="Profile Picture" class="profile-pic">
                            </div>

                            <div class="profile-details">
                                <h2 class="text-center">{{firstname}} {{surname}}</h2>
                                <p>{{phone}}</p>
                                <p>{{email}}</p>
                                <p>{{website}}</p>
                            </div>
                        </div>
                        <button class="save-btn">Edit</button>
                    </div>
                    <div class="secondary-layout">
                        <div class="accounts-section">
                            <div class="accounts-header">
                                <h3>Qualifications</h3>
                            </div>
                            <div class="account">
                                <p>{{qualifications}}</p>
                                <p>{{post_nominals}}</p>
                                <p>{{ahpranumber}}</p>
                                <p>{{category_id}}</p>
                            </div>
                        </div>

                        <div class="bills-section">
                            <div class="bills-header">
                                <h3>Others</h3>
                            </div>
                            <div class="bill">
                                <h6>Other associations</h6>
                                <p>{{other_associations}}</p>
                            </div>
                            <div class="bill">
                                <h6>Speciality</h6>
                                <p>{{specialties}}</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            {{/userdata}}
            {{^userdata}}
            <div class="col-md-8">
                <h5>Select a User</h5>
            </div>
            {{/userdata}}
        </div>
    </div>



